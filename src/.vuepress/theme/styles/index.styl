@import url('https://fonts.googleapis.com/css2?family=Lexend:wght@400;700;800&display=swap')

// .vuepress/style.styl, your extra styles.
h1,
h2,
h3,
h4
  color: $landoGrey
  font-family: Lexend
  font-size: 4em
  border: 0
  letter-spacing: -0.03em
  line-height: 4.25rem
  font-weight: 800
h2
  font-size: 2em
  line-height: 3.125rem
  margin-top: 2.8125rem
h3
  font-size: 1.4em
  line-height: 1.6875rem
  margin-top 2.25rem
h4
  font-size: 1.2em
  line-height: 1.5rem
a.header-anchor
  padding-right 0

blockquote
  padding 1.5rem 0 1.5rem 1.5rem
  font-size 1.3rem
  color lighten($landoPink, 25%)
  border-left 3px solid lighten($landoGrey, 50%)
  background lighten($landoBlue, 99%)
  font-style italic

body
  font-family Lexend

a
  color $landoGrey
  font-weight bold
  text-decoration: none
  position relative
  &:hover
    color $landoGrey
  &::after
    content: "";
    background: $solarYellow;
    position: absolute;
    width: calc(100% + 4px);
    left: -2px;
    bottom: 0px;
    height: 40%;
    z-index: -1;
    transition: .3s;
  &:hover:after
    height: 100%;
